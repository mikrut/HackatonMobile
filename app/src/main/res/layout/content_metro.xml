<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_metro" tools:context="ru.bmstu.iu6.hackatonmobile.MetroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Оповещение в метро"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Выбранная станция"
        android:id="@+id/editText"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stationSpinner"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationSpinner"
        android:text="ПН"
        android:id="@+id/checkBoxMon"
        android:checked="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkBoxMon"
        android:layout_below="@+id/stationSpinner"
        android:text="ВТ"
        android:id="@+id/checkBoxTue"
        android:checked="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkBoxTue"
        android:layout_below="@+id/stationSpinner"
        android:text="СР"
        android:id="@+id/checkBoxWed"
        android:checked="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkBoxWed"
        android:layout_below="@+id/stationSpinner"
        android:text="ЧТ"
        android:id="@+id/checkBoxThu"
        android:checked="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkBoxThu"
        android:layout_below="@+id/stationSpinner"
        android:text="ПТ"
        android:id="@+id/checkBoxFri"
        android:checked="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkBoxFri"
        android:layout_below="@+id/stationSpinner"
        android:text="СБ"
        android:id="@+id/checkBoxSat" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkBoxSat"
        android:layout_below="@+id/stationSpinner"
        android:text="ВС"
        android:id="@+id/checkBoxSun" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/stationSpinner">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Поиск от"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true" />

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timePickerFrom"

                android:layout_centerVertical="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Поиск до"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true" />

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timePickerTo"

                android:layout_centerVertical="true" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
